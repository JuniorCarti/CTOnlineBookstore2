<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main Content Layout -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Increased bottom padding to prevent content from overlapping bottom nav -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp">

            <!-- Navigation Drawer Icon (Top Left) -->
            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <!-- Greeting TextView (Centered) -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning!"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Account Icon (Top Right) -->
            <ImageView
                android:id="@+id/ivAccount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Account"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- Search Box -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSearch"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvGreeting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Search Icon -->
                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        android:contentDescription="Search Icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="12dp"/>

                    <!-- Search EditText -->
                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:hint="Search Products, Brands and Categories"
                        android:textSize="14sp"
                        android:background="@null"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:inputType="text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <!-- Mic Icon -->
                    <ImageView
                        android:id="@+id/ivMic"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mic"
                        android:contentDescription="Mic Icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="12dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Horizontal ScrollView for Product Categories -->
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:fillViewport="true"
                app:layout_constraintTop_toBottomOf="@id/cardSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Book Category -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_books"
                            android:contentDescription="Books"
                            android:background="@drawable/circle_background"
                            android:padding="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Books"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Pencils Category -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_pencils"
                            android:contentDescription="Pencils"
                            android:background="@drawable/circle_background"
                            android:padding="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pencils"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Notebooks Category -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_notebooks"
                            android:contentDescription="Notebooks"
                            android:background="@drawable/circle_background"
                            android:padding="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notebooks"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Crayons Category -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_crayons"
                            android:contentDescription="Crayons"
                            android:background="@drawable/circle_background"
                            android:padding="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crayons"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Colours Category -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_colours"
                            android:contentDescription="Colours"
                            android:background="@drawable/circle_background"
                            android:padding="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Colours"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Medical Books Category -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_medicalbooks"
                            android:contentDescription="Medical Books"
                            android:background="@drawable/circle_background"
                            android:padding="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical Books"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- First Banner Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBanner"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_to_school_banner">

                    <!-- Banner Headline -->
                    <TextView
                        android:id="@+id/tvBannerTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Back to School Offers!"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Banner Subtext -->
                    <TextView
                        android:id="@+id/tvBannerSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Get up to 30% off on selected items."
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Shop Now Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShopNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Now"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/button_yellow"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Banner Section (placed below the first banner) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBanner2"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardBanner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#4392F9"
                    android:background="@color/white">

                    <!-- Banner Header Text -->
                    <TextView
                        android:id="@+id/tvBannerHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ Deals of the Day"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Timer Icon -->
                    <ImageView
                        android:id="@+id/ivTimer"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_timer"
                        android:contentDescription="Timer Icon"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerHeader"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Countdown Timer Text -->
                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22h 55m 20s remaining"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerHeader"
                        app:layout_constraintStart_toEndOf="@id/ivTimer"/>

                    <!-- View All Text Box -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@id/tvBannerHeader"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <!-- View All Text -->
                            <TextView
                                android:id="@+id/tvViewAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View all"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:layout_marginEnd="4dp"/>

                            <!-- Arrow Icon -->
                            <ImageView
                                android:id="@+id/ivArrow"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_right"
                                android:contentDescription="Arrow Icon"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Horizontal ScrollView for Product Items -->
            <!-- Added bottom margin to ensure content is visible above the BottomNavigationView -->
            <HorizontalScrollView
                android:id="@+id/horizontalScrollProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardBanner2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- First Product Item (A4 KASUKU 200PGS) -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <!-- Product Image -->
                        <ImageView
                            android:id="@+id/ivProductImage"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_book_kasuku"
                            android:contentDescription="A4 KASUKU 200PGS Image" />

                        <!-- Product Title -->
                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A4 KASUKU 200PGS"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <!-- Price Information -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="4dp">

                            <!-- Current Price -->
                            <TextView
                                android:id="@+id/tvCurrentPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ksh180"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />

                            <!-- Original Price and Discount -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="2dp">

                                <TextView
                                    android:id="@+id/tvOriginalPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ksh250"
                                    android:textColor="@android:color/darker_gray"/>

                                <TextView
                                    android:id="@+id/tvDiscount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 25% off"
                                    android:textColor="@android:color/holo_green_dark"
                                    android:layout_marginStart="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Rating Information -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:rating="4.5" />

                            <TextView
                                android:id="@+id/tvRatingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="456"
                                android:layout_marginStart="4dp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Second Product Item (HB PENCILS PACK OF 12) -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <!-- Product Image -->
                        <ImageView
                            android:id="@+id/ivProductImage2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_hb_pencils"
                            android:contentDescription="HB PENCILS PACK OF 12 Image" />

                        <!-- Product Title -->
                        <TextView
                            android:id="@+id/tvProductName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HB PENCILS PACK OF 12"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <!-- Price Information -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="4dp">

                            <!-- Current Price -->
                            <TextView
                                android:id="@+id/tvCurrentPrice2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ksh720"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />

                            <!-- Original Price and Discount -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="2dp">

                                <TextView
                                    android:id="@+id/tvOriginalPrice2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ksh900"
                                    android:textColor="@android:color/darker_gray"/>

                                <TextView
                                    android:id="@+id/tvDiscount2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 33% off"
                                    android:textColor="@android:color/holo_green_dark"
                                    android:layout_marginStart="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Rating Information -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <RatingBar
                                android:id="@+id/ratingBar2"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:rating="4.0" />

                            <TextView
                                android:id="@+id/tvRatingCount2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500"
                                android:layout_marginStart="4dp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Third Product Item (Drawing Set) -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <!-- Product Image -->
                        <ImageView
                            android:id="@+id/ivProductImage3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_drawing_set"
                            android:contentDescription="Drawing Set Image" />

                        <!-- Product Title -->
                        <TextView
                            android:id="@+id/tvProductName3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Drawing Set"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <!-- Price Information (No discount) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="4dp">

                            <!-- Current Price -->
                            <TextView
                                android:id="@+id/tvCurrentPrice3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ksh3000"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <!-- Rating Information -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <RatingBar
                                android:id="@+id/ratingBar3"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:rating="4.0" />

                            <TextView
                                android:id="@+id/tvRatingCount3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:layout_marginStart="4dp"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Fourth Product Item (School Pad A4) -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp">

                        <!-- Product Image -->
                        <ImageView
                            android:id="@+id/ivProductImage4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_notebooks"
                            android:contentDescription="School Pad A4 Image" />

                        <!-- Product Title -->
                        <TextView
                            android:id="@+id/tvProductName4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="School Pad A4"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />

                        <!-- Price Information (No discount) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="4dp">

                            <!-- Current Price -->
                            <TextView
                                android:id="@+id/tvCurrentPrice4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ksh350"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <!-- Rating Information -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <RatingBar
                                android:id="@+id/ratingBar4"
